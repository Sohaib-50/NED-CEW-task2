<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="10dp"
    android:background="@color/black"
    android:gravity="center">

    <EditText
        android:id="@+id/et_openWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="@string/defaultWeb" />

    <Button
        android:id="@+id/btn_openWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/btnOpenWeb"
        android:textColor="@color/black"
        app:backgroundTint="#FFFFFF" />

    <EditText
        android:id="@+id/et_openLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:text="@string/defaultLocation"/>

    <Button
        android:id="@+id/btn_openLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/btnOpenLocation"
        android:textColor="@color/black"
        app:backgroundTint="@color/white"
        app:iconTint="#FFFFFF" />


</LinearLayout>